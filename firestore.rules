rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Публични агрегати
    match /settlements/{id} {
      allow read: if true;
      allow write: if false;
    }

    // Потребители – само собственик
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      allow create, delete: if false;

      match /inbox/{nid} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /tokens/{tid} {
        allow read: if false; // токени скрити
        allow write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // Сигнали/Идеи/Събития – публично четене, контролирано писане
    match /signals/{id} {
      allow read: if true;
      allow create: if request.auth != null || request.resource.data.anonymous == true;
      allow update, delete: if false;

      match /comments/{cid} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.by;
      }
      match /votes/{vid} {
        allow read: if true;
        allow create, delete: if request.auth != null && request.auth.uid == request.resource.data.by;
        allow update: if false;
      }
      match /watchers/{uid} {
        allow read: if false;
        allow write: if request.auth != null && request.auth.uid == uid;
      }
    }

    match /ideas/{id} {
      allow read: if true;
      allow create: if request.auth != null || request.resource.data.anonymous == true;
      allow update, delete: if false;
    }

    match /events/{id} {
      allow read: if true;
      allow create: if request.auth != null || request.resource.data.anonymous == true;
      allow update, delete: if false;

      match /rsvp/{uid} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && request.auth.uid == uid
          && request.resource.data.v in ["going","interested"]
          && request.resource.data.at is int;
      }
    }

    // Телеметрия – само Admin SDK
    match /telemetry/{doc=**} { allow read, write: if false; }
  }
}
