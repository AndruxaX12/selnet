{
  "name": "selnet",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "smoke": "node scripts/smoke.mjs",
    "i18n:check": "node scripts/i18n-check.mjs",
    "firebase:emulators": "firebase emulators:start --project selnet-ab187",
    "deploy:functions": "cd apps/functions && firebase deploy --only functions --project selnet-ab187",
    "deploy:rules": "firebase deploy --only firestore:rules --project selnet-ab187"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "critters": "^0.0.25",
    "firebase-admin": "^13.5.0",
    "pdf-parse": "^2.4.5",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  }
}
