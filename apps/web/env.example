NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Firebase Configuration (Required for the app to work)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:your-app-id

# Provider flags (set to 1 to enable)
NEXT_PUBLIC_ENABLE_GOOGLE=1
NEXT_PUBLIC_ENABLE_APPLE=1
NEXT_PUBLIC_ENABLE_EMAIL=1

# Optional: VAPID key for push notifications
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key-here
NEXT_PUBLIC_VAPID_KEY=${NEXT_PUBLIC_FIREBASE_VAPID_KEY}
